@using K9.SharedLibrary.Helpers
@model Donation
@{
    ViewBag.Title = K9.Globalisation.Dictionary.SponsorIbogaTree;
    ViewBag.SubTitle = K9.Globalisation.Dictionary.SponsorIbogaTree;
    ViewBag.BackgroundClass = "background-poaching1";
    Layout = "../Shared/_LayoutFormSmall.cshtml";
}

<h3>@K9.Globalisation.Dictionary.SponsorIbogaTreeSubTitle</h3>

@using (Html.BeginForm("SponsorIboga", "Support", FormMethod.Post))
{
    using (Html.BeginBootstrapForm())
    {
        <div class="donations">
            @MvcHtmlString.Create(K9.Globalisation.Dictionary.iboga_sponsor_text)
        </div>

        <hr />

        @Html.Partial("_TreeSponsorCounter")

        <hr />

        @Html.BootstrapEditorFor(model => model.NumberOfIbogas)
        @Html.HiddenFor(model => model.DonationDescription)

        <p>@String.Format(K9.Globalisation.Dictionary.IbogaPriceText, 30.ToString("C2", CurrencyTools.GetCultureInfoFromIso("USD")))</p>

        <hr />
        @Html.BootstrapButton(Dictionary.Next, EButtonType.Submit, "fa-chevron-right", EButtonClass.IconRight)
    }
}