@using K9.Base.WebApplication.Config

<div class="main-section">
    <div class="container">
        <div class="main-heading">
            <h3>@WebsiteConfiguration.Instance.CompanyName C.I.C</h3>
        </div>
    </div>
    <div class="container">
        <div class="alert alert-@EAlertType.Warning.ToString().ToLower() alert-dismissable fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a> <strong>@K9.Globalisation.Dictionary.Disclaimer</strong>
            <p style="margin-top: 8px;">@MvcHtmlString.Create(K9.Globalisation.Dictionary.IbogaDisclaimer)</p>
        </div>
    </div>
    <div class="container">
        <div>
            <div class="col-md-5">
                <div class="picture-frame margin-bottom-30">
                    <div>
                        @Html.Carousel(new CarouselOptions("Images/home/botf", "", 70)
                        {
                            ImageSizing = EImageSizing.Horizontal
                        })
                    </div>
                    @Html.Partial("_PhotosBy")
                </div>
            </div>
            <div class="col-md-7 margin-top-minus-15">
                <article>
                    @MvcHtmlString.Create(K9.Globalisation.Dictionary.blessings_of_the_forest)
                </article>
            </div>
            <div class="clearfix">
            </div>
        </div>
    </div>
    <br />
    <div class="text-center">
        @Html.BootstrapActionLinkButton(Dictionary.SupportUs, "Index", "Support", null, "fa-thumbs-o-up", EButtonClass.Large)
        @Html.BootstrapActionLinkButton(K9.Globalisation.Dictionary.SignUpToNewsLetter, "SignUpToNewsLetter", "Contacts", null, "fa-envelope", EButtonClass.Large)
        @Html.BootstrapActionLinkButton(K9.Globalisation.Dictionary.Shop, "Index", "Shop", null, "fa-shopping-cart", EButtonClass.Large)
    </div>
</div>