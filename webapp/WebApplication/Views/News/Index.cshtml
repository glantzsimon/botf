@using System.Web.Mvc.Html
@using K9.Base.DataAccessLayer.Enums
@using K9.Base.WebApplication.ViewModels
@using K9.WebApplication.Helpers
@model List<NewsItem>
@{
    ViewBag.Title = K9.Globalisation.Dictionary.News;
}

@Html.Partial("_SponsorIbogaBanner")
<div id="main-banner" class="banner-default main-menu">
    @Html.Partial("_Navbar")
</div>

<div class="main-section">
    <div class="container">
        <div class="main-heading">
            <h3>@K9.Globalisation.Dictionary.News</h3>
            <div id="action-signup-button-container" class="text-center">
                @Html.BootstrapActionLinkButton(K9.Globalisation.Dictionary.SignUpToNewsLetter, "SignUpToNewsLetter", "Contacts", null, "fa-envelope", EButtonClass.Large)
            </div>
        </div>
    </div>
    @Html.Partial("_News")
</div>